@model PetProject.Models.TaskModel
<div class="container d-flex justify-content-center text-center">
    <form asp-controller="Home" asp-action="MoreDetails" method="get" class="vertical-center">
        <input type="hidden" asp-for="TaskModelId" />
        <h3 class="display-4">@Model.GoalTask</h3>
        <p class="mt-3 description-font">@Model.Description</p>
        <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="MakeTasks">Go back</a>
    </form>
</div>