@model ToDoList.Entities.ApplicationUser
<div class="container mt-5">
    <div class="profile">
        <div class="profile__body row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title mb-4">
                            <div class="d-flex justify-content-start">
                                <div class="profile__image">
                                    <img src="https://png.pngtree.com/png-vector/20191018/ourmid/pngtree-user-icon-isolated-on-abstract-background-png-image_1824979.jpg" alt="Your logo/avatar" width="150" height="150" class="img-thumbnail">
                                </div>
                                <div class="profile__main-information">
                                    <div class="profile__description mt-4 ml-4">@Model.UserName</div>
                                    <div class="profile__description mt-4 ml-4">Количество активных задач - @Model.Tasks.Count</div>
                                    <div class="mt-4 ml-4">
                                        <a class="btn btn-link" asp-controller="Account" asp-action="ChangePassword">Change password</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 mt-4">
                <div class="row">
                    <div class="col-md-6">
                        <label>First name</label>
                    </div>
                    <div class="col-md-6">
                        <p>@Model.FirstName</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Last name</label>
                    </div>
                    <div class="col-md-6">
                        <p>@Model.LastName</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Date of birth</label>
                    </div>
                    <div class="col-md-6">
                        <p>@Model.DateOfBirth</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>